<div class="seat-map">
  <div class="cinema-screen"></div>
  <%= form_tag booking_seats_path, id: "form-seat", method: :post do %>
    <table class="table" id="seat-map-table">
      <tbody>
        <% ("A".."E").each do |row| %>
          <tr>
            <% 5.times.each do |n| %>
              <td class="hidden-td"></td>
            <%end %>
            <% @seats.where(row:row).each do |seat| %>
              <td id="<%= seat.id %>" class="<%= booked_seat session[:schedule_id], seat.id %>">
                <%= check_box_tag "seat_id[]", seat.id %>
                <%= seat.row %><%= seat.number %>
                <%= hidden_field_tag "user_id", current_user.id %>
              </td>
            <% end %>
          </tr>
        <% end %>
        <% ("F".."M").each do |row| %>
          <tr>
            <% 5.times.each do |n| %>
              <td class="hidden-td"></td>
            <%end %>
            <% @seats.where(row:row).each do |seat| %>
              <td class="<%= booked_seat session[:schedule_id], seat.id %>">
                <%= check_box_tag "seat_id[]", seat.id %>
                <%= seat.row %><%= seat.number %>
                <%= hidden_field_tag "user_id", current_user.id %>
              </td>
            <% end %>
          </tr>
        <% end %>
        <% ("N".."O").each do |row| %>
          <tr>
            <% 5.times.each do |n| %>
              <td class="hidden-td"></td>
            <%end %>
            <% @seats.where(row:row).each do |seat| %>
              <td class="<%= booked_seat session[:schedule_id], seat.id %>">
                <%= check_box_tag "seat_id[]", seat.id %>
                <%= seat.row %><%= seat.number %>
                <%= hidden_field_tag "user_id", current_user.id %>
              </td>
            <% end %>
            <% 8.times.each do |n| %>
              <td class="hidden-td"></td>
            <%end %>
          </tr>
        <% end %>
        <% ("P".."R").each do |row| %>
          <tr>
            <% @seats.where(row:row).each do |seat| %>
              <td class="<%= booked_seat session[:schedule_id], seat.id %>">
                <%= check_box_tag "seat_id[]", seat.id %>
                <%= seat.row %><%= seat.number %>
                <%= hidden_field_tag "user_id", current_user.id %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
