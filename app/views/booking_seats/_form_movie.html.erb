<div id="order order_movie">
  <div class="container">
    <div class="row order-content">
      <div class="col-sm-9 col-xs-12 seat_content ph0">
        <h2>Đặt vé</h2>
        <div class="zoom-button-container">
          <span id="zoom-in" class="btn btn-default zoom-button button display-none">+ Phóng to</span>
          <span id="zoom-out" class="btn btn-default zoom-button button display-none">- Thu nhỏ</span>
        </div>
        <div class="entry-order-content">
          <div id="msform" name="msform">
            <fieldset class="select-info-movie">
              <div class="wpc-content">
                <h3>Chọn rạp phim</h3>
                <%= select_tag :select_cinema,
                  options_from_collection_for_select(@cinemas, :id, :name) %>
                <h3 class="mt3">Chọn phòng chiếu</h3>
                <%= select_tag :select_auditorium,
                  options_from_collection_for_select(Cinema.first.auditoria, :id, :name) %>
                <h3 class="mt3">Phim chiếu</h3>
                <%= @movie.title if params[:movie_id] %>
                <%#= select_tag :select_movie,
                  options_from_collection_for_select(@movies, :id, :title) %>
                <h3 class="mt3">Lịch chiếu</h3>
                <ul class="order-date"><span>Chưa có lịch chiếu</span></ul>
              </div>
            </fieldset>
            <fieldset class="seat-content">
              <div class="wpc-content">
                <% if @seats.size == 200 %>
                  <%= render "booking_seats/seat_map" %>
                <% elsif @seats.size == 300 %>
                  <%= render "booking_seats/seat_map_300" %>
                <% else %>
                  <%= render "booking_seats/seat_map_400" %>
                <% end %>
                <div id="legend"></div>
              </div>
            </fieldset>
          </div>
        </div>
      </div>
      <div class="col-sm-3 col-xs-12 order_sidebar ph0">
        <h2>Thông tin vé</h2>
        <div class="order-details">
          <span> Rạp phim:</span>
          <p id="locationp">CGV</p>
          <span> Phòng chiếu:</span>
          <p id="auditoriump"></p>
          <span> Phim:</span>
          <p id="moviep"><%= @movie.title if params[:movie_id]%></p>
          <span>Giờ chiếu:</span>
          <p id="timep"></p>
          <span>Ghế: </span>
          <ul id="selected-seats"></ul>
          <div>Số lượng vé: <span id="counter">0</span></div>
          <div>
            <button id="submit-booking">Đặt vé</button>
          </div>
        </div>
        <a href="javascript:;" class="close-window"><i class="fa fa-times"></i></a>
      </div>
    </div>
  </div>
</div>
