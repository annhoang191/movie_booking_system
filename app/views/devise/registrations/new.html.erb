<div class="user-signup-form">
  <h2 class="text-center"><%= t ".heading" %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label t(".name") %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label t(".email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label t(".phone_number") %><br />
      <%= f.telephone_field :phone_number %>
    </div>
    <div class="field">
      <%= f.label t(".password") %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t(".minimum_characters") %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label t(".password_confirmation") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.submit t(".signup"), class: "signup-button" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
