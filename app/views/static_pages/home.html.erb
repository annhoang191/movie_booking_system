<div class="fullwidth-slider">
  <div id="headerslider" class="carousel slide">
    <ol class="carousel-indicators">
      <li data-target="#headerslider" data-slide-to="0" class="active"></li>
      <li data-target="#headerslider" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <% @movies.each do |movie| %>
        <div class="item active">
          <div class="fill" data-bg-image="<%= movie.cover ? movie.cover : "https://create.adobe.com/2015/8/25/film_fan_art/_jcr_content/article-marquee.img.jpg/1443212365018.jpg" %>">
            <div class="container movie-slider-container">
              <div class="row">
                <div class="col-sm-12 movie-slider-content">
                  <div class="slider-content" >
                    <ul class="subtitle"  data-animation="animated bounceInRight">
                      <% movie.genre.each do |genre| %>
                        <li><%= genre%> <li>
                      <% end %>
                    </ul>
                    <div class="title" data-animation="animated bounceInRight" >
                      <%= @movie.title %><i>(2017)</i>
                    </div>
                    <div class="slide_right" data-animation="animated bounceInRight">
                      <a href="javascript:;" class="btn-trailer">watch trailer</a> <a href="javascript:;" class="btn-ticket">buy ticket</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Controls -->
    <a class="carousel-control left" href="#headerslider" data-slide="prev">
    <i class="fa fa-angle-left"></i>
    </a>
    <a class="carousel-control right" href="#headerslider" data-slide="next">
    <i class="fa fa-angle-right"></i>
    </a>
  </div>
</div>

<section class="section-content">
  <div class="container-fluid pv11 ">
    <div class="row">
      <div class="col-sm-12">
        <h3 class="heading text-center">Phim đang chiếu</h3>
        <div class="ticket-carousel pvt85">
          <div class="swiper-container carousel-container movie-images" data-col="5">
            <div class="swiper-wrapper">
              <% @movies.each do |movie| %>
                <div class="swiper-slide">
                  <div class="movie-image" data-bg-image="<%= movie.cover ? movie.cover : "images/carousel/movie-1.jpg" %>">
                    <div class="entry-hover">
                      <div class="entry-actions">
                        <a href="#" class="btn-trailers video-player">watch trailer</a>
                        <%= button_to "Đặt Vé", new_booking_seat_path, class: "btn-ticket",
                          method: :get, params: {movie_id: movie.id}%>
                      </div>
                    </div>
                    <div class="entry-desc">
                      <h3 class="entry-title"><%= movie.title %></h3>
                      <ul class="entry-date">
                        <% movie.schedules.each do |schedule| %>
                          <li><%= schedule.start_time.strftime("%Y/%m/%d %H:%M:%S") %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<% if user_signed_in? %>
  <%= render "booking_seats/form" %>
<% end %>
